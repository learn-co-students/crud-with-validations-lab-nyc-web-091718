<%= form_for(@song) do |f| %>

<% if flash[:error] %>
<% flash[:error].each do |error| %>
<%= error %><p>
<% end %>
<% end %>
<p>

<div class="field">
<%= f.label :title %>
<%= f.text_field :title %><p>
</div>
<div class="field">
<%= f.label :released %>
<%= f.check_box :released %><p>
</div>
<div class="field">
<%= f.label :release_year %>
<%= f.number_field :release_year %><p>
</div>
  <div class="field">
<%= f.label :artist_name %>
<%= f.text_field :artist_name %><p>
</div>
<div class="field">
<%= f.label :genre %>
<%= f.text_field :genre %><p>
</div>
<%= f.submit %>
<% end %>
